<p id='notice'><%= notice %></p>
<div class=container>
  <h1>Dashboard</h1>
  <form>
      <%= form_tag(proyectos_path, :method => 'get', id: 'search-form') do %>
      <%=text_field_tag :search, params[:search], placeholder: "Filtrar estado (propuesta, en progreso o terminado)" %>
      <button class= "btn btn-primary" type='submit'>Buscar</button>
      <%end%>  

  </form>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Descripci√≥n</th>
        <th scope="col">Fecha de comienzo</th>
        <th scope="col">Fecha de termino</th>
        <th scope="col">Estado</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>  

    <tbody>
      <% @proyectos.each do |proyecto| %>
        <tr>
          <td><%= proyecto.name %></td>
          <td><%= proyecto.description %></td>
          <td><%= proyecto.starting_date %></td>
          <td><%= proyecto.ending_date %></td>
          <td><%= proyecto.state %></td>
          <td><%= link_to 'Show', proyecto %></td>
          <td><%= link_to 'Edit', edit_proyecto_path(proyecto) %></td>
          <td><%= link_to 'Destroy', proyecto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  

  <br>  

  <%= link_to 'New Proyecto', new_proyecto_path %>
</div>